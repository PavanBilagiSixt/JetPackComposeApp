<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.basicsofcompose">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BasicsOfCompose"
        tools:targetApi="31">
        <activity
            android:name=".SimpleStateActivity"
            android:exported="false"
            android:label="@string/title_activity_simple_state"
            android:theme="@style/Theme.BasicsOfCompose" />
        <activity
            android:name=".SimpleStylingTextActivity"
            android:exported="false"
            android:label="@string/title_activity_simple_styling_text"
            android:theme="@style/Theme.BasicsOfCompose" />
        <activity
            android:name=".SimpleCardActivity"
            android:exported="false"
            android:label="@string/title_activity_simple_card"
            android:theme="@style/Theme.BasicsOfCompose" />
        <activity
            android:name=".SimpleRowActivity"
            android:exported="false"
            android:label="@string/title_activity_simple_row"
            android:theme="@style/Theme.BasicsOfCompose" />
        <activity
            android:name=".SimpleColumnActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.BasicsOfCompose">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>